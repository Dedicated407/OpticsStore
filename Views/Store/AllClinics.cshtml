@model IEnumerable<Clinic>

@{
    ViewBag.Title = "Список клиник";
}

<h3 class="my-4 text-center">@ViewBag.Title</h3>
<div class="mx-4">
    <table class="table table-bordered table-striped table-hover table-sm">
        <thead class="table-dark">
        <tr class="table-responsive">
            <th>ID</th>
            <th>Название</th>
            <th>Страна</th>
            <th>Город</th>
            <th>Адрес</th>
            <th>Номер телефона</th>
            <th>Прикреплена к фабрике</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var clinic in Model)
        {
            <tr class="table-responsive text-start">
                <td>@clinic.Id</td>
                <td>@clinic.Name</td>
                <td>@clinic.City.Country.Name</td>
                <td>@clinic.City.Name</td>
                <td>@clinic.Address</td>
                <td>@clinic.Phone</td>
                <td>@clinic.Factory.Name</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="p-4">
    <a class="btn btn-dark" asp-action="MainPage">Вернуться на главную страницу</a>
</div>