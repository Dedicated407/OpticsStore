<!DOCTYPE html>
<html lang="ru">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>@ViewBag.Title</title>
  <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/login.css" />
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" asp-action="MainPage">Оптика</a>
        <div class="d-flex justify-content-end">
          <div>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
              <a class="btn btn-outline-info me-2" type="submit" asp-action="Logout" asp-controller="Account">Выйти</a>
            }
            else
            {
              <a class="btn btn-outline-info me-2" type="submit" asp-action="Login" asp-controller="Account">Войти</a>
            }
            <a class="btn btn-outline-info" type="submit" asp-action="UserOrders" asp-controller="Store">Мои заказы</a>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <main class="py-md-5">
    @RenderBody()
  </main>

  <footer class="container-fluid nav navbar-dark py-4 justify-content-between bg-dark">
    <nav class="row-cols-2 nav d-flex p-4">
      <a class="p-2 link-secondary" href="#">Технологии</a>
      <a class="p-2 link-secondary" href="#">Гарантия и возврат</a>
      <a class="p-2 link-secondary" asp-action="AllClinics">Наши клиники</a>
      <a class="p-2 link-secondary" asp-action="AllFactories">Наши фабрики</a>
      <a class="p-2 link-secondary" href="#">О компании</a>
    </nav>

    <nav class="row-cols-2 p-4">
      <p class="navbar-brand p-2">© 2021 Магазин "Оптика"</p>
    </nav>
  </footer>
</body>
</html>